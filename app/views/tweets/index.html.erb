<p id="notice"><%= notice %></p>
<header>
  <h1>Tweets</h1>
</header>
<div class="container">
  <div class="row">
    <table>
      <thead>
        <tr>
          <th>Message</th>
        </tr>
      </thead>

      <tbody>
        <% @tweets.each do |tweet| %>
          <tr class="card col">
            <td class="card-block"><%= tweet.message %></td>
            <td class="btn btn-primary text-white"><%= link_to 'Show', tweet %></td>
            <td class="btn btn-primary text-white"><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
            <td class="btn btn-primary text-white"><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<%= link_to 'New Tweet', new_tweet_path %>
